<body>
    <!-- navbar-->
    <header class="header">
        <nav class="navbar navbar-expand-lg px-4 py-2 bg-white shadow"><a href="#" class="sidebar-toggler text-gray-500 mr-4 mr-lg-5 lead"><i class="fas fa-align-left"></i></a><a class="navbar-brand font-weight-bold text-uppercase text-base">Vitable_care</a>

        </nav>
    </header>
    <div class="d-flex align-items-stretch">
        <div id="sidebar" class="sidebar py-3">
            <div class="text-gray-400 text-uppercase px-3 px-lg-4 py-4 font-weight-bold small headings-font-family">MAIN</div>
            <ul class="sidebar-menu list-unstyled">
                <li class="sidebar-list-item"><a href="/patient_list" class="sidebar-link text-muted"><i class="o-home-1 mr-3 text-gray"></i><span>Home</span></a></li>
                <li class="sidebar-list-item"><a href="/bio_information" class="sidebar-link text-muted"><i class="o-sales-up-1 mr-3 text-gray"></i><span>Bio Info</span></a></li>
                <li class="sidebar-list-item"><a href="/patient_information" class="sidebar-link text-muted"><i class="o-table-content-1 mr-3 text-gray"></i><span>Patient Info</span></a></li>
                <li class="sidebar-list-item"><a href="/sign_up" class="sidebar-link text-muted active"><i class="o-survey-1 mr-3 text-gray"></i><span>Sign up</span></a></li>

                <li class="sidebar-list-item"><a href="/login_session" class="sidebar-link text-muted"><i class="o-exit-1 mr-3 text-gray"></i><span>Logout</span></a></li>
            </ul>

        </div>

        <div class="page-holder w-100 d-flex flex-wrap">
            <div class="container-fluid px-xl-5">
                <section class="py-5">
                    <div class="row">
                        <!-- Form Elements -->
                        <div class="sb container-fluid mb-5">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="h6 text-uppercase mb-0">회원 가입</h3>
                                </div>
                                <div class="card-body">
                                    <form class="form-horizontal">
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">ID</label>
                                            <div class="col-md-9">
                                                <div class="form-group">
                                                    <div class="input-group mb-3">
                                                        <input type="text" name="ID" placeholder="중복확인 후 가입 진행을 해주세요." aria-label="Recipient's username" aria-describedby="button-addon2" class="form-control">
                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-primary" onclick="javascript:form.action='/ID_Check';form.method='post';">중복검사</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">Password</label>
                                            <div class="col-md-9">
                                                <input type="password" name="PW" class="form-control"><small class="form-text text-muted ml-3">Password는 특수문자, 영문자, 숫자 조합으로 만들어주세요</small>
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">이름</label>
                                            <div class="col-md-9">
                                                <input type="text" name="name" class="form-control">
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">휴대폰번호</label>
                                            <div class="col-md-9">
                                                <input type="text" name="phone_num" class="form-control"><small class="form-text text-muted ml-3">xxx-xxxx-xxxx로 입력해주세요</small>
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">성별</label>
                                            <div class="col-md-9">
                                                <input type="text" name="sex" class="form-control"><small class="form-text text-muted ml-3">남 or 여</small>
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">생년월일</label>
                                            <div class="col-md-9">
                                                <input type="text" name="birth" class="form-control"><small class="form-text text-muted ml-3">YYYYMMDD로 입력해주세요</small>
                                            </div>
                                        </div>

                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">이메일</label>
                                            <div class="col-md-9">
                                                <div class="form-group">
                                                    <div class="input-group mb-3">
                                                        <input type="text" name="e_mail" placeholder="이메일주소 입력 후 인증하기를 진행해주세요." aria-label="Recipient's username" aria-describedby="button-addon2" class="form-control">
                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-primary" onclick="javascript:form.action='/certification_email';form.method='post';">인증하기</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">인증코드</label>
                                            <div class="col-md-9">
                                                <div class="form-group">
                                                    <div class="input-group mb-3">
                                                        <input type="text" name="e_mail_certification" placeholder="입력한 이메일로 발송된 인증코드를 입력해주세요." aria-label="Recipient's username" aria-describedby="button-addon2" class="form-control">
                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-primary" onclick="javascript:form.action='/confirm_email';form.method='post';">확인</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-md-3 form-control-label">관계자코드번호</label>
                                            <div class="col-md-9">
                                                <input type="text" name="code_num" class="form-control">
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <div class="col-md-7 ml-auto">
                                                <button type="submit" class="btn btn-secondary" onclick="javascript:form.action='/sign_up'; form.method='post'; ">회원가입</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <footer class="footer bg-white shadow align-self-end py-3 px-xl-5 w-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-center text-md-left text-primary">
                    <p class="mb-2 mb-md-0">Vitable_care &copy; 2019-2020</p>
